{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Student Management System",
  "version": "0.1.0",
  "identifier": "com.student-management-system.app",
  "build": {
    "frontendDist": "../student-management-system-frontend/out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd student-management-system-frontend && npm run dev",
    "beforeBuildCommand": "cd student-management-system-frontend && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "نظام إدارة الطلاب - Student Management System",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
